<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F8FDFE"
    android:padding="32dp">

    <!-- BOTÓN GRANDE PARA RECIBIR IMAGEN - MÁS SUTIL -->
    <Button
        android:id="@+id/btn_receive_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:text="\nRECIBIR\nIMAGEN"
        android:textSize="18sp"
        android:textStyle="normal"
        android:gravity="center"
        android:background="@drawable/btn_circular_green"
        android:textColor="#FFFFFF"
        android:enabled="false"
        android:alpha="0.6"
        android:layout_marginBottom="20dp" />

    <!-- MENSAJE CUANDO NO HAY DISPOSITIVO - MÁS SUTIL -->
    <TextView
        android:id="@+id/tv_no_device_selected"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="\nNo hay dispositivo ESP32 seleccionado\n\nToca aquí para ir a Ajustos"
        android:textSize="14sp"
        android:textColor="#5D7B83"
        android:gravity="center"
        android:textStyle="normal"
        android:layout_marginTop="24dp"
        android:padding="20dp"
        android:background="@drawable/border_warning"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone" />

    <!-- ESTADO DE LA CONEXIÓN - MÁS SUTIL -->
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#5D7B83"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

</LinearLayout>