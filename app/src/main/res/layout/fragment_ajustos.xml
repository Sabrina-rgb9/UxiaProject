<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ConfiguraciÃ³ Bluetooth ESP32"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/tv_selected_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cap dispositiu ESP32 seleccionat"
        android:textSize="18sp"
        android:textColor="#333333"
        android:gravity="center"
        android:padding="16dp"
        android:background="#F5F5F5"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btn_select_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar Dispositiu Bluetooth"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:padding="12dp" />

    <Button
        android:id="@+id/btn_clear_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Esborrar Dispositiu Seleccionat"
        android:textSize="18sp"
        android:backgroundTint="#FF5722"
        android:padding="12dp"
        android:visibility="gone" />

</LinearLayout>